<table class="table table-bordered table-hover">
  <thead>
    <td>Nome</td>
    <td>Descrição</td>
    <td>Preço</td>
    <td>Quantidade</td>
    <td>Ações</td>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.value %></td>
        <td><%= product.amount %></td>
        <td><%= button_to "Remover", product, method: :delete, 
          class:"btn btn-danger", 
          data: {confirm: "Certeza que deseja excluir o produto #{product.name} ? "} %></td>
      </tr>
    <% end %>
  </tbody>
</table>