    <td>Preço</td>
    <td>Quantidade</td>
    <td>Ações</td>
  </thead>
  <tbody>
    <% @discounted_product.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.value %></td>
        <td><%= product.amount %></td>
      </tr>
    <% end %>
  </tbody>
</table>
