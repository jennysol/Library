<table class="table table-bordered table-hover">
  <thead>
    <td>Nome</td>
    <td>Descrição</td>
    <td>Preço</td>
    <td>Quantidade</td>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.value %></td>
        <td><%= product.amount %></td>
        <td><a href="products/<%= product.id %>/delete">Remover</a></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="alert alert-success" role="alert">
  <h4 class="alert-heading">Produto com Desconto</h4>
</div>
<table class="table table-bordered table-hover">
