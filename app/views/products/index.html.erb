<html>
  <body>
    <table>
      <thead>
        <tr>Nome</tr>
        <tr>Descrição</tr>
        <tr>Preço</tr>
        <tr>Quantidade</tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.description %></td>
            <td><%= product.value %></td>
            <td><%= product.amount %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
